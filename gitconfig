[push]
	default = current
[user]
	name = Nathan Leiby
	email = nathan.leiby@clever.com
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[push]
	default = simple
	default = current
[github]
	user = nathanleiby
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[url "git@github.com:"]
    insteadOf = https://github.com/
